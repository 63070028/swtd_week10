pipeline {
    agent any

    stages {
        stage('Run Shell Command') {
            steps {
                sh 'echo "Hello, world!"'
                sh 'Current directory is:'
                sh 'ls'
     
                dir('./devopt_week10/Lab_Jenkins/Jenkinsfile') {
                     sh 'move Lab_Jenkins La'
                     sh 'ls'
                 }          
           
                sh 'docker build -t myapp .'
                sh 'docker run -d -p 8085:3000 myapp'
                sh 'docker ps -a'
            }
        }
    }
}


