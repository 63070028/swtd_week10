pipeline {
    agent any

    stages {
        stage('Run Shell Command') {
            steps {
                sh 'echo "Hello, world!"'
                sh 'cd ./Lab_Jenkins'
                sh 'ls -la'

                sh 'docker build -t myapp .'
                sh 'docker run -d -p 8085:3000 myapp'
                sh 'docker ps -a'
            }
        }
    }
}
