pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
                sh    "ls "
                sh    " docker --version "
            }
        }

         stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("your-image-name")
                }
            }
        }
    }

   
}
