
pipeline {
    agent {
        docker 'docker:latest'
    }

    stages {

        
        stage('Print Current Path') {
            steps {
                dir('Lab_Jenkins') {
                    echo "Current path is ${pwd()}"
                    sh 'docker build -t my-image . && docker run -d -p 8085:3000 my-image'
                    sh 'docker ps | grep my-image'
                }
            }
        }
    stage('Test') {
        steps {
            sh 'curl http://localhost:8085'
        }
    }
    
    
    
    }
}





